<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
            NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <Label Text="Suite Super Luxo" TextColor="{StaticResource Primary}" 
               FontFamily="KalamRegular" FontSize="50"
               HorizontalTextAlignment="Center"/>
       
        <Frame Margin="10">

            <HorizontalStackLayout >
              
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Criancas: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>

            </HorizontalStackLayout>
        </Frame>

        <Frame>
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="auto,auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-In"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-Out"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia"/>

                <Label Grid.Row="1" Grid.Column="0" Text="21/01/2020"/>
                <Label Grid.Row="1" Grid.Column="1" Text="10/03/2025"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor total"/>
                <Label Text="R$ 700,000.00"/>
            </HorizontalStackLayout>
        </Frame>
        
        <Button Text="Voltar" 
                HorizontalOptions="Center" 
                Clicked="Button_Clicked" />
        
    </VerticalStackLayout>
    
</ContentPage>